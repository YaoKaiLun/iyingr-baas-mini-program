.user-info {
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
}

.user-info__left {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.user-info__left__name {
  flex: 1;
  padding-top: 20rpx;
  font-size: 50rpx;
}

.user-info__left__data {
  height: 50rpx;
  font-size: 30rpx;
}

.user-info__right {
  width: 300rpx;
  margin: auto;
  text-align: center;
}

.user-info__right image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.article-item {
  margin: 0 0 40rpx;
}

.article-item__cover {
  width: 100%;
}

.article-item__desc {
  margin: 0 20rpx;
}

.article-item__desc__digest {
  font-size: 27rpx;
}
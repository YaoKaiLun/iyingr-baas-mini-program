.category {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 50rpx;
  overflow-y: scroll;
  padding:10rpx;
  background-color:#eee;
}

.category-item {
  display: inline-block;
  padding-right: 25rpx;
  color: #fff;
}

.category-item--clicked {
  color: #000;
}

.article-item {
  margin: 0 0 40rpx;
}

.article-cover {
  width: 100%;
}

.article-desc {
  margin: 0 20rpx;
}

.article-item__title {
  display: flex;
  flex-direction: row;
}

.article-item--clicked {
  color: gray;
}

.article-item__title--left {
  flex: 1;
}

.article-item__collect--right {
  min-width: 70rpx;
}

.collect-icon {
  width: 35rpx;
  height: 35rpx;
}

.load-more-btn {
  border: 0 !important;
}
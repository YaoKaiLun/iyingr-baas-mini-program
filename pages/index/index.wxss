.category {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 50rpx;
  overflow-y: scroll;
  padding:10rpx;
  background-color:#eee;
}

.category-item {
  display: inline-block;
  padding-right: 25rpx;
  color: #999;
}

.category-item--clicked {
  color: #000;
}

.article-item {
  margin: 0 0 40rpx;
}

.article-item__cover {
  width: 100%;
}

.article-item__desc {
  margin: 0 20rpx;
}

.article-item--clicked {
  color: gray;
}

.article-item__desc__digest {
  font-size: 27rpx;
}

.load-more-btn {
  border: 0 !important;
}